<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Palm Tree Counting</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
</head>
<body>
<div class="container mt-5">
    <h1>Welcome to Palm Tree Counting</h1>
    <form id="imageUploadForm" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="imageUpload" class="form-label">Upload your image</label>
            <input class="form-control" type="file" id="imageUpload" name="image">
        </div>
        <button type="submit" class="btn btn-primary">Count Palm Trees</button>
    </form>
    <div id="result" class="mt-3" style="display: none;">
        <h2>Count: <span id="countResult"></span></h2>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#imageUploadForm').submit(function (event) {
            event.preventDefault();
            var formData = new FormData(this);
            
            $.ajax({
                url: '/api/predict',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                beforeSend: function() {
                    console.log('Sending image for prediction...');
                },
                success: function (response) {
                    console.log('Prediction success:', response);
                    $('#result').show();
                    $('#countResult').text(response.count);
                },
                error: function (xhr, status, error) {
                    console.error('Prediction error:', xhr.responseText);
                    $('#result').show();
                    $('#countResult').text('Error: ' + xhr.responseText);
                }
            });
        });
    });
</script>
</body>
</html>